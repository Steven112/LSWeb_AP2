    private void Buscar()
    {
        if (Filtro == "0")
        {
            Listado = UsuariosBLL.GetList(e => true);
            FiltrarPorLaFecha();
        }
        else
        {
            if (Criterio == "")
            {
                Mensaje = "Agregue el criterio de busqueda.";
            }
            else
            {
                Listado = UsuariosBLL.GetList(e => true);
                switch (Filtro)
                {
                    case "1":
                        Listado = Listado.Where(e => e.UsuarioId.ToString().Contains(Criterio.ToString())).ToList();
                        Mensaje = "";
                        break;
                    case "2":
                        Listado = Listado.Where(e => e.Nombres.ToString().Contains(Criterio.ToString())).ToList();
                        Mensaje = "";
                        break;
                    case "3":
                        Listado = Listado.Where(e => e.NombreUsuario.ToString().Contains(Criterio.ToString())).ToList();
                        Mensaje = "";
                        break;
                    case "4":
                        Listado = Listado.Where(e => e.Nivel.ToString().Contains(Criterio.ToString())).ToList();
                        Mensaje = "";
                        break;
                    case "5":
                        Listado = Listado.Where(e => e.Email.ToString().Contains(Criterio.ToString())).ToList();
                        Mensaje = "";
                        break;
                    case "6":
                        Listado = Listado.Where(e => e.Celular.ToString().Contains(Criterio.ToString())).ToList();
                        Mensaje = "";
                        break;
                    case "7":
                        Listado = Listado.Where(e => e.FechaInsercion.ToString().Contains(Criterio.ToString())).ToList();
                        Mensaje = "";
                        break;
                }
                FiltrarPorLaFecha();
            }

        }

    }

}
